<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Theme Made By www.w3schools.com - No Copyright -->
    <title>Bootstrap Theme Company Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="../public/stylesheets/main.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<body>

<div id="header">
    <% include header.ejs%>
</div>

<div id="categoryBar">
    <% include categoryFood.ejs %>
</div>

<div>

    <% for (var i = 0; i < store.length; i++) {
        var title = store[i].title;
        var id = store[i].id;
        var phoneNum = store[i].phoneNum;
        var startTime = store[i].startTime;
        var endTime = store[i].endTime;
        var isDelivery;
        if (store[i].isDelivery == true)
            isDelivery = "배달가능";
        else
            isDelivery = "배달안됨";
        var address = store[i].address;
    %>
    <a href="/detail?storeId=<%= id %>">
    <div style="width: 70%;">
        <div class="panel panel-default text-center">
            <div class="panel-heading">
                <h1>Basic</h1>
            </div>
            <div class="panel-body">
                <p><strong>title</strong><%= title%></p>
                <p><strong>phoneNum</strong><%= phoneNum%></p>
                <p><strong>영업시간</strong><%= startTime%> ~ <%= endTime%></p>
                <p><strong>배달여부</strong><%= isDelivery%></p>
                <p><strong>주소</strong><%= address%></p>
            </div>
            <div class="panel-footer">
                <h3>$19</h3>
                <h4>per month</h4>
                <button class="btn btn-lg">Sign Up</button>
            </div>
        </div>
    </div>
    </a>
    <% } %>


</div>

</body>

</html>
